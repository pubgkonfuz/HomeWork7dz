<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Text" TextView="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Base.Text.Small" TextView="Base.Text">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Base.Text.Large" TextView="Base.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Base.Text.Arrow" TextView="Base.Text">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Image" ImageView="Image">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
    </style>
    <style name="Base">Base</style>
</resources>